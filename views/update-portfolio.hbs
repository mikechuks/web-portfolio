                <!-- Basic Layout -->
                <div class="col-xxl">
                  <div class="card mb-4">
                    <div class="card-header d-flex align-items-center justify-content-between">
                      <h5 class="mb-0">Professional Experience</h5>
                      <small class="text-muted float-end">experience</small>
                    </div>
                    <div class="card-body">
                      {{#each rows}}
                      <form method="POST" action="/update-portfolio" enctype="multipart/form-data">
                        <div class="row mb-3">
                          <input type="hidden" id="id" name="id" value="{{this.port_id}}">
                          <label class="col-sm-2 col-form-label" for="basic-default-company">Portfolio Title</label>
                          <div class="col-sm-10">
                            <input
                              type="text"
                              class="form-control"
                              id="basic-default-company"
                              name="portTitle"
                              value="{{this.port_title}}"
                            />
                          </div>
                        </div>
                        <div class="row mb-3">
                          <label class="col-sm-2 col-form-label" for="basic-default-company">Portfolio Text</label>
                          <div class="col-sm-10">
                            <input
                              type="text"
                              class="form-control"
                              id="basic-default-company"
                              name="portTes"
                              value="{{this.port_text}}"
                            />
                          </div>
                        </div>
                        <div class="row mb-3">
                          <label class="col-sm-2 col-form-label" for="basic-default-company">Portfolio Image</label>
                          <div class="col-sm-10">
                            <input
                              type="file"
                              class="form-control"
                              id="basic-default-company"
                              name="portImg"
                              value="{{this.port_img}}"
                            />
                          </div>
                        </div>
                        <div class="row mb-3">
                          <label class="col-sm-2 col-form-label" for="basic-default-company">Portfolio url</label>
                          <div class="col-sm-10">
                            <input
                              type="text"
                              class="form-control"
                              id="basic-default-company"
                              name="portUrl"
                              value="{{this.port_url}}"
                            />
                          </div>
                        </div>
                        <div class="row justify-content-end">
                          <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Update Portfolio</button>
                          </div>
                        </div>
                      </form>
                      {{/each}}
                    </div>
                  </div>
                </div>
            </div>